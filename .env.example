# LinkUp Golf - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Clerk Authentication
# ===========================================
# Get your keys from https://clerk.com
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# Mapbox (for golf course maps)
# ===========================================
# Get your token from https://mapbox.com
MAPBOX_TOKEN=pk.your_mapbox_token

# ===========================================
# Demo Mode
# ===========================================
# Set to "true" to bypass authentication for demos
DEMO_MODE=true

# ===========================================
# Email Configuration
# ===========================================
# Set EMAIL_ENABLED=true to enable email notifications

EMAIL_ENABLED=false

# Option 1: Resend (Recommended - https://resend.com)
# Sign up at resend.com, verify your domain, and get an API key
# RESEND_API_KEY=re_your_api_key

# Option 2: SMTP (Gmail, SendGrid, AWS SES, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
SMTP_FROM=LinkUp Golf <noreply@linkupgolf.com>

# ===========================================
# Database & Redis (for Docker Compose)
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/linkupgolf
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT Secret (for real-time server)
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars

# ===========================================
# Web Push Notifications (optional)
# ===========================================
# Generate VAPID keys: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY=your_vapid_public_key
# VAPID_PRIVATE_KEY=your_vapid_private_key
# VAPID_SUBJECT=mailto:admin@linkupgolf.com
