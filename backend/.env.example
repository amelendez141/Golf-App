# Server
NODE_ENV=development
PORT=3001

# Demo Mode (set to "true" to bypass authentication - for demos without Clerk)
DEMO_MODE=true

# Database (Neon PostgreSQL - https://neon.tech)
# Create a free account and get your connection string
DATABASE_URL="postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/linkup_golf?sslmode=require"

# Redis (Upstash - https://upstash.com)
# Create a free account and get your Redis URL
REDIS_URL="rediss://default:xxx@us1-xxx.upstash.io:6379"

# Clerk Authentication (https://clerk.com)
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key"
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret"
CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_READ_PER_MIN=100
RATE_LIMIT_WRITE_PER_MIN=20

# Logging
LOG_LEVEL=debug
